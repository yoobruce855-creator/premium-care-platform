{
    "rules": {
        ".read": false,
        ".write": false,
        "users": {
            ".indexOn": [
                "email"
            ],
            ".read": true,
            ".write": true
        },
        "sessions": {
            ".read": true,
            ".write": true
        },
        "_diagnostics": {
            ".read": true,
            ".write": true
        },
        "patients": {
            ".indexOn": [
                "guardianId"
            ],
            "$patientId": {
                ".read": true,
                ".write": true,
                "vitals": {
                    ".indexOn": [
                        "timestamp"
                    ],
                    ".read": true,
                    ".write": true
                },
                "alerts": {
                    ".indexOn": [
                        "timestamp",
                        "severity",
                        "acknowledged"
                    ],
                    ".read": true,
                    ".write": true
                },
                "events": {
                    ".indexOn": [
                        "timestamp"
                    ],
                    ".read": true,
                    ".write": true
                }
            }
        },
        "notifications": {
            "$uid": {
                ".read": true,
                ".write": true
            }
        }
    }
}